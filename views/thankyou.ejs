<%- include('header', {seoDetails}) %>

<body>
  <div class="thank-you-page">
    <!-- Background elements -->
    <div class="background-elements">
      <div class="bg-shape shape-1"></div>
      <div class="bg-shape shape-2"></div>
    </div>

    <!-- Icon elements with proper opacity -->
    <div class="icon-elements">
      <div class="icon icon-photographer">
        <img src="/assets/images/photograph.png" alt="Photographer" />
      </div>
      <div class="icon icon-mannequin">
        <img src="/assets/images/trade-show.png" alt="Fashion Design" />
      </div>
      <div class="icon icon-social">
        <img src="/assets/images/social-media.png" alt="Social Media" />
      </div>
      <div class="icon icon-interior">
        <img src="/assets/images/staircase.png" alt="Interior Design" />
      </div>
    </div>

    <!-- Main content section -->
    <main class="main-content">
      <div class="content-wrapper">
        <h1 class="thank-you-heading">Thank You!</h1>
        
        <div class="message-container">
          <p id="thank-you-message" class="thank-you-message"></p>
        </div>
        
        <div class="action-buttons">
          <a href="/" class="primary-button">
            <span>Back to Home</span>
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15 10H5M5 10L10 15M5 10L10 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="/courses" class="secondary-button">Explore Courses</a>
        </div>
        
        <div class="social-share">
          <p>Share your achievement:</p>
          <div class="social-icons">
            <a href="#" class="social-icon" aria-label="Share on Instagram">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 16C14.2091 16 16 14.2091 16 12C16 9.79086 14.2091 8 12 8C9.79086 8 8 9.79086 8 12C8 14.2091 9.79086 16 12 16Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M16 2.5H8C4.96243 2.5 2.5 4.96243 2.5 8V16C2.5 19.0376 4.96243 21.5 8 21.5H16C19.0376 21.5 21.5 19.0376 21.5 16V8C21.5 4.96243 19.0376 2.5 16 2.5Z" stroke="currentColor" stroke-width="2"/>
                <path d="M17.5 7C18.0523 7 18.5 6.55228 18.5 6C18.5 5.44772 18.0523 5 17.5 5C16.9477 5 16.5 5.44772 16.5 6C16.5 6.55228 16.9477 7 17.5 7Z" fill="currentColor"/>
              </svg>
            </a>
            <a href="#" class="social-icon" aria-label="Share on Facebook">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            <a href="#" class="social-icon" aria-label="Share on Twitter">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M22 4.01C21 4.5 20.02 4.69 19 5C17.879 3.735 16.217 3.665 14.62 4.263C13.023 4.861 11.977 6.323 12 8.01V9.01C8.755 9.083 5.865 7.605 4 5.01C4 5.01 -0.182 12.946 8 16.01C6.128 17.247 4.261 18.088 2 18.01C5.308 19.926 8.913 20.512 12.034 19.522C15.614 18.399 18.556 15.561 19.685 11.49C20.0218 9.98849 20.0694 8.42972 19.824 6.91C19.824 6.91 20.867 5.196 22 4.01Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      // Display thank you message from session storage
      const message = sessionStorage.getItem("thankYouMessage");
      
      if (message) {
        document.getElementById("thank-you-message").textContent = message;
        sessionStorage.removeItem("thankYouMessage");
      } else {
        // Default message if none is stored
        document.getElementById("thank-you-message").textContent = 
          "Your submission has been received successfully. We're excited to welcome you to our creative community of designers, photographers, and artists. Get ready to embark on an inspiring journey with us!";
      }
      
      // Animate icons with random delays
      const icons = document.querySelectorAll('.icon');
      icons.forEach(icon => {
        const delay = Math.random() * 0.5;
        icon.style.animationDelay = `${delay}s`;
        icon.classList.add('animate');
      });
      
      // Animate content elements
      const contentElements = document.querySelectorAll('.content-wrapper > *');
      contentElements.forEach((element, index) => {
        element.style.animationDelay = `${0.2 + (index * 0.1)}s`;
        element.classList.add('animate');
      });
    });
  </script>

  <style>
    /* Base styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Poppins', 'Helvetica Neue', Arial, sans-serif;
      background-color: #f9f6f2;
      color: #333;
      line-height: 1.6;
      overflow-x: hidden;
      min-height: 100vh;
    }
    
    /* Main container */
    .thank-you-page {
      position: relative;
      width: 100%;
      min-height: 100vh;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px 20px;
    }
    
    /* Background elements */
    .background-elements {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }
    
    .bg-shape {
      position: absolute;
      border-radius: 50%;
    }
    
    .shape-1 {
      top: -10%;
      right: -10%;
      width: 60vw;
      height: 60vw;
      background: linear-gradient(135deg, rgba(26, 156, 120, 0.05) 0%, rgba(26, 156, 120, 0.01) 100%);
    }
    
    .shape-2 {
      bottom: -15%;
      left: -15%;
      width: 70vw;
      height: 70vw;
      background: linear-gradient(135deg, rgba(26, 156, 120, 0.05) 0%, rgba(26, 156, 120, 0.01) 100%);
    }
    
    /* Icon elements */
    .icon-elements {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      pointer-events: none;
    }
    
    .icon {
      position: absolute;
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .icon.animate {
      opacity: 0.1;
      transform: translateY(0);
    }
    
    .icon img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    
    .icon-photographer {
      top: 10%;
      right: 10%;
      width: 150px;
      height: 150px;
    }
    
    .icon-mannequin {
      bottom: 15%;
      right: 15%;
      width: 120px;
      height: 120px;
    }
    
    .icon-social {
      top: 20%;
      left: 10%;
      width: 130px;
      height: 130px;
    }
    
    .icon-interior {
      bottom: 10%;
      left: 15%;
      width: 140px;
      height: 140px;
    }
    
    /* Main content */
    .main-content {
      position: relative;
      z-index: 1;
      width: 100%;
      max-width: 800px;
    }
    
    .content-wrapper {
      width: 100%;
    }
    
    .content-wrapper > * {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
    
    @keyframes fadeIn {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .thank-you-heading {
      font-size: 72px;
      font-weight: 700;
      color: #1A9C78;
      margin-bottom: 30px;
      line-height: 1.1;
    }
    
    .message-container {
      margin-bottom: 40px;
    }
    
    .thank-you-message {
      font-size: 18px;
      line-height: 1.6;
      color: #555;
    }
    
    /* Next steps section */
    .next-steps {
      margin-bottom: 40px;
      background-color: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(10px);
      border-radius: 12px;
      padding: 30px;
      border: 1px solid rgba(26, 156, 120, 0.1);
    }
    
    .next-steps h2 {
      font-size: 24px;
      font-weight: 600;
      color: #1A9C78;
      margin-bottom: 20px;
    }
    
    .next-steps ul {
      list-style: none;
    }
    
    .next-steps li {
      display: flex;
      align-items: flex-start;
      margin-bottom: 15px;
    }
    
    .step-number {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 30px;
      height: 30px;
      background-color: #1A9C78;
      color: white;
      border-radius: 50%;
      font-weight: 600;
      margin-right: 15px;
      flex-shrink: 0;
    }
    
    .step-text {
      padding-top: 5px;
    }
    
    /* Action buttons */
    .action-buttons {
      display: flex;
      gap: 20px;
      margin-bottom: 40px;
    }
    
    .primary-button, .secondary-button {
      display: inline-flex;
      align-items: center;
      padding: 14px 28px;
      border-radius: 8px;
      font-weight: 500;
      font-size: 16px;
      text-decoration: none;
      transition: all 0.3s ease;
    }
    
    .primary-button {
      background-color: #1A9C78;
      color: white;
      gap: 10px;
    }
    
    .primary-button:hover {
      background-color: #158463;
      transform: translateY(-2px);
    }
    
    .secondary-button {
      background-color: transparent;
      color: #1A9C78;
      border: 1px solid #1A9C78;
    }
    
    .secondary-button:hover {
      background-color: rgba(26, 156, 120, 0.1);
      transform: translateY(-2px);
    }
    
    /* Social share */
    .social-share {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }
    
    .social-share p {
      font-size: 16px;
      color: #666;
    }
    
    .social-icons {
      display: flex;
      gap: 15px;
    }
    
    .social-icon {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: #f0f0f0;
      color: #1A9C78;
      transition: all 0.3s ease;
    }
    
    .social-icon:hover {
      background-color: #1A9C78;
      color: white;
      transform: translateY(-2px);
    }
    
    /* Responsive styles */
    @media (max-width: 992px) {
      .thank-you-heading {
        font-size: 60px;
      }
      
      .icon-photographer, .icon-interior {
        width: 120px;
        height: 120px;
      }
      
      .icon-mannequin, .icon-social {
        width: 100px;
        height: 100px;
      }
    }
    
    @media (max-width: 768px) {
      .thank-you-heading {
        font-size: 48px;
      }
      
      .thank-you-message {
        font-size: 16px;
      }
      
      .next-steps {
        padding: 20px;
      }
      
      .action-buttons {
        flex-direction: column;
        gap: 15px;
      }
      
      .primary-button, .secondary-button {
        width: 100%;
        justify-content: center;
      }
      
      .icon {
        opacity: 0.05;
      }
      
      .icon-photographer {
        top: 5%;
        right: 5%;
        width: 100px;
        height: 100px;
      }
      
      .icon-mannequin {
        bottom: 10%;
        right: 10%;
        width: 80px;
        height: 80px;
      }
      
      .icon-social {
        top: 10%;
        left: 5%;
        width: 90px;
        height: 90px;
      }
      
      .icon-interior {
        bottom: 5%;
        left: 10%;
        width: 100px;
        height: 100px;
      }
    }
    
    @media (max-width: 480px) {
      .thank-you-heading {
        font-size: 36px;
      }
      
      .thank-you-message {
        font-size: 15px;
      }
      
      .next-steps h2 {
        font-size: 20px;
      }
      
      .step-text {
        font-size: 14px;
      }
      
      .social-share {
        align-items: center;
      }
    }
  </style>
</body>
